<div class="show-flash">
    <%= flash[:notice] %>
</div>

<div class="title-books">
  <h1>Books</h1>

<table class="table-layout">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td class="newbook-title">
        <%= book.title %></td>
      <td class="newbook-body">
        <%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id), class:"books-show" %></td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id), class:"books-edit" %></td>
      <td>
        <%= link_to "Destroy", book_path(book.id), class:"books-destroy",  method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <p class="push-title">Title</p>
    <%= f.text_field :title %>
  <p class="push-body">Book</p>
    <%= f.text_area :body %>
  <p>
    <%= f.submit 'Create Book' %>
  </P>
<% end %>

