<index><%= flash[notice] %>
</index>

<div class="title-books">
  <h1>Books</h1>

<table class="table-layout">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td class="newbook-title">
        <%= book.title %></td>
      <td class="newbook-body">
        <%= book.body %></td>
      <td class="books-show">
        <%= link_to "Show", book_path(book.id) %></td>
      <td class="books-edit">
        <%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="books-destroy">
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Book</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

</div>

