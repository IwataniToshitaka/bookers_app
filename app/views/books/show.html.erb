<div class="show-flash">
  <%= flash[:notice] %>
</div>

<table class="show-table">
<tr>
    <th class=show-title>Title:</th>
    <td><%= @book.title %></td>
</tr>

<tr>
    <th class=show-body>Body:</th>
    <td><%= @book.body %></td>
</tr>
</table>

<div class="show_links">
<%= link_to "Edit", edit_book_path(@book.id), class:"edit_from_show" %>
<%= link_to "Back", '/books', class:"back_from_show" %>
</div>