<table class="show-table">
<tr>
    <th class=show-title>Title:</th>
    <td><%= @book.title %></td>
</tr>

<tr>
    <th class=show-body>Body:</th>
    <td><%= @book.body %></td>
</tr>
</table>

<div class="show-link">
<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Back", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
</div>